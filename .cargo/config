[target.aarch64-linux-android]
rustflags = [
    "-C", "link-arg=-lc++_static",
    "-C", "link-arg=-lc++abi",
    "-C", "link-arg=-lEGL",
    "-C", "link-arg=-lGLESv3",
    "-C", "link-arg=-llog",
]

